<form style="text-align: center;" name="cse" id="searchbox_demo" action="http://www.google.com/cse">
    <input type="hidden" name="cref" value="" />
    <input type="hidden" name="ie" value="utf-8" />
    <input type="hidden" name="hl" value="" />
    <input name="q" type="text" size="40" />
    <input type="submit" name="sa" value="Search" />
</form>
<script type="text/javascript" src="https://www.google.com/cse/tools/onthefly?form=searchbox_demo&lang="></script>

<h5 style="text-align: left; ">Are you here to donate services or commodities?</h5>
<form>
    <input type="checkbox" name="donate" value="Services">Services<br>
    <input type="checkbox" name="donate" value="Commodities">Commodities<br>
    <input type="checkbox" name="donate" value="Both">Both
</form>
<h3 style="text-align: left;">Requests Made By Recipients</h3>
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Organization</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>EMail</th>
        <th>User Type</th>
        <th>Items Needed</th>
    </tr>
    </thead>
    <tbody>
    {{#each models}}
    <tr>
        <td>{{this.attributes.orgName}}</td>
        <td>{{this.attributes.address}}</td>
        <td>{{this.attributes.phoneNumber}}</td>
        <td>{{this.attributes.email}}</td>
        <td>{{this.attributes.Type}}</td>
        <td>{{this.attributes.itemsNeeded}}</td>
    </tr>
    {{/each}}
    </tbody>
</table>
<div id="map-canvas" style="width:100%;height:400px"></div>
</div>