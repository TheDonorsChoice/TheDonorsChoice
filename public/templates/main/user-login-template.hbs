{{#if this.attributes.loggedIn}}
    <div>
        <h2>{{this.attributes.name}}</h2>
    </div>
    <div class="col-md-12">
        <a href="#">Account Settings</a>
    </div>
    <div class="col-md-12" style="margin-bottom: 25px">
        <a id="btn-logout">Logout</a>
    </div>
{{else}}
    <div>
        <h2>Login</h2>
    </div>
    <form id="loginform" class="form-horizontal" role="form">

        <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i>
                </span>
            <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Email">
        </div>

        <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i>
                </span>
            <input id="login-password" type="password" class="form-control" name="password" placeholder="Password">
        </div>

        <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
                <button id="btn-login" class="btn btn-success">Login</button>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                    Need an account? <a id="register" href="#register">Sign Up Here</a>
                </div>
            </div>
        </div>
    </form>
{{/if}}

